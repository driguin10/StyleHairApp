<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telas.agendamento.servicos_agenda.escolherServico">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_escolherServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/corToobar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/corTextos"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaServicosSalao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/barraStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_escolherServico"
        >

    </android.support.v7.widget.RecyclerView>




    <LinearLayout
        android:id="@+id/barraStatus"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/corToobar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:orientation="vertical"
        android:gravity="center">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btVerListaServicos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/icone_servicos_branco" />
             <TextView
                 android:id="@+id/txtQuantidadeServico"
                 android:layout_width="wrap_content"
                 android:layout_height="20dp"
                 android:paddingLeft="5dp"
                 android:paddingRight="5dp"
                 android:layout_marginLeft="50dp"
                 android:layout_gravity="right|bottom"
                 android:gravity="center"
                 android:background="@drawable/bt_azul_esuro"
                 android:text="0"
                 android:textColor="@color/corTextos"
                 android:textStyle="bold"/>
        </android.support.design.widget.CoordinatorLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/corTextos"
            android:text="ServiÃ§os Selecionados "/>
    </LinearLayout>

</LinearLayout>


        <Button
            android:id="@+id/btProsseguir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="prosseguir"
            android:background="@drawable/bt_azul_esuro"
            android:textColor="@color/corTextos"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="7dp"
           />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>